<h1>All Shelters</h1>

<% @shelters.all.each do |shelter| %>
	<h3><a href="/shelters/<%="#{shelter.id}"%>"><%= shelter.name %></a></h3>
  <table>
    <tr>
      <th>Name</th>
      <th>Breed</th>
      <th>Age</th>
      <th>Sex</th>
      <th>Shelter</th>
      <th>Adopt</th>
    </tr>
  <% shelter.dogs.each do |dog|%>
    <% if !dog.owner %>
    <tr>
      <td><a href="/dogs/<%="#{dog.id}"%>"><%= dog.name %></a></td>
      <td><%=dog.breed%></td>
      <td><%= dog.age%></td>
      <% if dog.sex == 'M' %>
      <td>male</td>
      <% else %>
      <td>female</td>
      <% end %>
      <td><%= dog.shelter.name %></td>
      <td><button> Adopt Me! </button> </td>
    </tr>
    <% end %>
  <% end %>
  </table>
 
<% end %>